{
  "protocol": {
    "type": "CAN",
    "baudrate": 500000,
    "description": "CAN ISO 15765-4 (500 kbaud) - 2012+ vehicles. Change to 'KWP2000' for 2002 MR2 Spyder"
  },
  "units": {
    "system": "metric",
    "description": "Display unit system: 'metric' for km/h, °C or 'sae' for mph, °F"
  },
  "pids": {
    "rpm": {
      "command": "010C",
      "formula": "((A*256)+B)/4",
      "unit": "RPM"
    },
    "speed": {
      "command": "010D",
      "formula": "A",
      "unit": "km/h"
    },
    "coolant_temp": {
      "command": "0105",
      "formula": "A-40",
      "unit": "°C"
    },
    "temp": {
      "command": "0105",
      "formula": "A-40",
      "unit": "°C"
    }
  },
  "gauges": {
    "rpm_gauge": {
      "type": "arc",
      "title": "RPM",
      "data_source": "rpm",
      "min": 0,
      "max": 8000,
      "unit": "RPM",
      "visual": {
        "colors": {
          "background": "#1a1a1a",
          "arc_background": "#404040",
          "arc_indicator": "#FF6B00",
          "text": "#FFFFFF",
          "safe": "#00FF00",
          "warning": "#FFAA00",
          "danger": "#FF0000"
        },
        "arc_width": 15,
        "font_size": 24,
        "border_width": 2,
        "decimal_places": 0
      },
      "zones": [
        {
          "min": 0,
          "max": 6000,
          "color": "#00FF00",
          "label": "Safe"
        },
        {
          "min": 6000,
          "max": 7000,
          "color": "#FFAA00",
          "label": "Warning"
        },
        {
          "min": 7000,
          "max": 8000,
          "color": "#FF0000",
          "label": "Danger"
        }
      ],
      "markers": [
        {
          "name": "redline",
          "value": 7000,
          "style": "line",
          "color": "#FF0000"
        }
      ],
      "alerts": [
        {
          "threshold": 7000,
          "condition": "above",
          "action": "flash",
          "flash_color": "#FF0000",
          "flash_rate": 200
        }
      ]
    },
    "speed_gauge": {
      "type": "digital",
      "title": "Speed",
      "data_source": "speed",
      "min": 0,
      "max": 220,
      "unit": "km/h",
      "visual": {
        "colors": {
          "background": "#1a1a1a",
          "text": "#00FF00"
        },
        "font_size": 32,
        "decimal_places": 0
      },
      "zones": [],
      "markers": [],
      "alerts": []
    },
    "temp_gauge": {
      "type": "bar",
      "title": "Coolant Temp",
      "data_source": "temp",
      "min": 0,
      "max": 120,
      "unit": "°C",
      "visual": {
        "colors": {
          "background": "#1a1a1a",
          "bar_background": "#404040",
          "bar_fill": "#FF6B00",
          "text": "#FFFFFF",
          "cold": "#0080FF",
          "normal": "#00FF00",
          "hot": "#FF0000"
        },
        "bar_height": 30,
        "font_size": 14,
        "decimal_places": 0
      },
      "zones": [
        {
          "min": 0,
          "max": 80,
          "color": "#0080FF",
          "label": "Cold"
        },
        {
          "min": 80,
          "max": 100,
          "color": "#00FF00",
          "label": "Normal"
        },
        {
          "min": 100,
          "max": 120,
          "color": "#FF0000",
          "label": "Hot"
        }
      ],
      "markers": [
        {
          "name": "normal",
          "value": 90,
          "style": "tick",
          "color": "#00FF00"
        }
      ],
      "alerts": [
        {
          "threshold": 110,
          "condition": "above",
          "action": "flash",
          "flash_color": "#FF0000",
          "flash_rate": 300
        }
      ]
    }
  },
  "display": {
    "width": 480,
    "height": 320,
    "elements": [
      {
        "gauge_name": "rpm_gauge",
        "x": 0,
        "y": 0,
        "width": 480,
        "height": 320
      }
    ]
  },
  "legacy_windows": [
    {
      "id": 0,
      "x": 100,
      "y": 100,
      "width": 320,
      "height": 480,
      "gauges": [
        {
          "gauge_name": "rpm_gauge",
          "x": 0,
          "y": 0,
          "width": 320,
          "height": 480
        }
      ]
    },
    {
      "id": 1,
      "x": 450,
      "y": 100,
      "width": 320,
      "height": 480,
      "gauges": [
        {
          "gauge_name": "speed_gauge",
          "x": 0,
          "y": 0,
          "width": 320,
          "height": 480
        }
      ]
    },
    {
      "id": 2,
      "x": 800,
      "y": 100,
      "width": 320,
      "height": 480,
      "gauges": [
        {
          "gauge_name": "temp_gauge",
          "x": 0,
          "y": 0,
          "width": 320,
          "height": 480
        }
      ]
    }
  ]
}
